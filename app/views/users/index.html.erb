

<div class = "mytab container">
<h1>User Table</h1>
<table class = "table table-striped ">
  <thead class="thead-dark">
  
    <tr>
      <th>User name</th>
     
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <% if user.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
   <%end%>
   
      <tr>
        <td ><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-secondary text-white"%></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>