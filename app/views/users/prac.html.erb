

<div class = "mytab container">
<h1>User Table</h1>
<table class = "table table-striped ">
  <thead class="thead-dark">
  
    <tr>
      <th>User name</th>
     
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td ><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-secondary text-white"%></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-info text-white" %></td>
        <td><%= link_to 'Destroy', user, class: "btn btn-danger text-white", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>