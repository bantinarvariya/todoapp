<div class = "mytab container">
<h1>List of task</h1>

<table class = "table table-striped table-bordered ">
  <thead  class="thead-dark">
    <tr>
      <th>Task name</th>
      <th>Task descption</th>
      <th>Start date</th>
      <th>Due date</th>
       <th>Estimate time</th>
      <th>Priority scale</th>
      <th>Status</th>
      <th>privacy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.task_descption %></td>
        <td><%= task.start_date %></td>
        <td><%= task.due_date %></td>
        <td><%= task.estimate_time %></td>
        <td><%= task.priority_scale %></td>        
        <td><%= task.status %></td>        
        <td> <% if task.ispublic %>
               <%= render plain: 'Public' %>
             <% else %>
               <%= render plain: 'Private' %>
             <% end %>
        </td>
        <td><%= link_to 'Edit', edit_user_task_path(@user, task),class: "btn btn-primary" %></td>
        <td><%= link_to 'Delete', [@user, task],class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to 'New task', new_user_task_path(@user),class: "btn btn-primary" %>